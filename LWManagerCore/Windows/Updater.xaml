<Window x:Class="LWManagerCore.Windows.Updater"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LWManagerCore.Windows"
        mc:Ignorable="d"
        Title="Updater" Height="160" Width="480">
    <Grid>
        <StackPanel Margin="15">
            <ProgressBar Name="ProgressBar" Height="20" Minimum="0" Maximum="100" Margin="15"/>
            <Button Name="BtnCheckUpdate" Click="BtnCheckUpdate_Click" Content="Проверить обновление" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
